{% extends 'base.html.twig' %}

{% block title %}TwelvePics / Impressum{% endblock %}

{% block body_class %}content content-location bg-light{% endblock %}

{% block body %}
    {% apply spaceless %}

        {% include 'content/header.html.twig' with {
            'title': 'Suche nach Standort',
        } %}

        {% embed 'main_layout_without_header.html.twig' %}
            {% block main_content %}
                <div id="content-location">
                    <h2 class="first">Suche nach Standort</h2>

                    {{ form_start(form) }}
                        <div>
                            {{ form_widget(form.locationFull) }}
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Standortsuche</button>
                        </div>
                    {{ form_end(form) }}

                    <p class="description">
                        Versuche doch einmal Folgendes:
                        <ul class="list-group">
                            <li class="list-group-item"><a onclick="document.getElementById('full_location_locationFull').value = '52.524889,13.3692797';" class="link-primary">Berlin Hauptbahnhof</a></li>
                            <li class="list-group-item"><a onclick="document.getElementById('full_location_locationFull').value = '47.358580,8.530299';" class="link-primary">Museum Rietberg in Z√ºrich</a></li>
                            <li class="list-group-item"><a onclick="document.getElementById('full_location_locationFull').value = '47.900635,13.601868';" class="link-primary">Miglberg am Attersee</a></li>
                            <li class="list-group-item"><a onclick="document.getElementById('full_location_locationFull').value = '51.118500,13.125058';" class="link-primary">Stadtsporthalle D√∂beln</a></li>
                            <li class="list-group-item"><a onclick="document.getElementById('full_location_locationFull').value = '27.7351308,-15.599363';" class="link-primary">Faro de Maspalomas auf Gran Canaria</a></li>
                            <li class="list-group-item"><a onclick="document.getElementById('full_location_locationFull').value = '54.4067051,18.6620502';" class="link-primary">Westerplatte in Danzig</a></li>
                        </ul>
                    </p>

                    {% if locationData|length > 0 %}

                        {% if attribute(locationData, 'place-full') is defined %}
                            <div class="cite">
                                <p>Sieht so aus, als ob du nach Folgendem suchst. üòç</p>
                                <q>{{ attribute(locationData, 'place-full') }}</q>
                            </div>
                        {% endif %}

                        <h3>Detailliert</h3>

                        <table class="table">
                        {% for key,value in locationData %}
                            <tr>
                                <td><b>{{ key|camel_case|trans([], 'location') }}</b></td>
                                <td>
                                    {% if value is not empty %}
                                        {{ value }}
                                    {% else %}
                                        <i>{{ 'notGiven'|trans([], 'location') }}</i>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </table>
                    {% endif %}
                </div>
            {% endblock %}
        {% endembed %}

        {% include 'content/footer.html.twig' with {

        } %}
    {% endapply %}
{% endblock %}
