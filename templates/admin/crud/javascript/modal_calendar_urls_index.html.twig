<script>

    let modalCalendarUrlsTitle = '{{ 'admin.actions.calendarUrls.title'|trans|raw }}';
    let modalCalendarUrlsText = '{{ 'admin.actions.calendarUrls.questionIndex'|trans|raw }}';
    let modalCalendarUrls = document.getElementById('modal-calendar-urls');

    modalCalendarUrls.addEventListener('show.bs.modal', function (event) {

        /* Button that triggered the modal */
        let button = event.relatedTarget;

        // /* Get Properties */
        let tr = button.closest('tr');
        let name = tr.querySelector('td[data-label="Name"], td[data-label="Name"]').textContent.trim();

        /* Href */
        let href = button.href;

        /* Modal elements */
        let modalButton = modalCalendarUrls.querySelector('#modal-calendar-urls-button');
        let modalTitle = modalCalendarUrls.querySelector('.modal-title');
        let modalText = modalCalendarUrls.querySelector('.modal-text');

        /* Change Text */
        modalTitle.textContent = modalCalendarUrlsTitle;
        modalText.textContent = modalCalendarUrlsText.
            replace(/%name%/, name);

        /* Set onclick */
        modalButton.onclick = function() {
            location.href = href;
        };
    })

</script>
