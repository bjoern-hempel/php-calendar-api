{% extends 'base.html.twig' %}

{% block title %}{{ calendarImage.name }}{% endblock %}

{% block body_class %}calendar-detail{% endblock %}

{% block body %}
    {% apply spaceless %}
        <div class="content">
            <h1>{{ calendarImage.title }}</h1>
            <p>
                Jahr: {{ calendarImage.year }}<br />
                Monat: {{ calendarImage.month }}
            </p>
            <p>
                <img src="{{ calendarImage.pathTarget|path_preview(1024)|add_hash|url_absolute }}" />
            </p>
            <p>
                <a href="{{ path_encoded('app_calendar_index', {'hash': calendarImage.user.idHash, 'userId': calendarImage.user.id, 'calendarId': calendarImage.calendar.id}) }}">Ãœbersicht</a>
            </p>
        </div>
    {% endapply %}
{% endblock %}
